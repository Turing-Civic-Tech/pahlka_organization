<!DOCTYPE html>
<html>
  <head>
    <title>PahlkaOrganization</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <nav>
      <a href="https://turing.io" target="_blank"><img class="turing-logo" src="/assets/turing-logo.png" alt="Turing School of Software and Design Logo"></a>

      <ul>
        <li class="nav-menu-item"><a href="" class="nav-link">ABOUT</a></li>
        <li class="nav-menu-item"><a><%= link_to 'REPOSITORIES', repositories_path, class: 'nav-link' %> </a></li>
        <li class="nav-menu-item"><a><%= link_to 'CONTRIBUTORS', user_index_path, class: 'nav-link' %> </a></li>
        <li class="nav-menu-item"><a><%= link_to 'PROJECTS', projects_path, class: 'nav-link' %> </a></li>
        <li class="nav-menu-item">
          <% if current_user %>
          <a><%= link_to 'HOME', user_path(current_user), class: 'nav-link' %> </a>
          <% else %>
          <a class="nav-menu-item login-link nav-link">LOGIN</a>
          <% end %></li>
      </ul>
      <%= render partial: "layouts/login_modal" %>
    </nav>
   <% if flash[:message] -%>
    <p class="flash_message"><%= flash[:message] %></p>
   <% end -%>
   <%= yield %>
  </body>
</html>
